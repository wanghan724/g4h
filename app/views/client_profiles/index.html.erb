<p id="notice"><%= notice %></p>

<h1>Client Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Address</th>
      <th>Contact number</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_profiles.each do |client_profile| %>
      <tr>
        <td><%= client_profile.first_name %></td>
        <td><%= client_profile.last_name %></td>
        <td><%= client_profile.age %></td>
        <td><%= client_profile.email %></td>
        <td><%= client_profile.address %></td>
        <td><%= client_profile.contact_number %></td>
        <td><%= client_profile.photo %></td>
        <td><%= link_to 'Show', client_profile %></td>
        <td><%= link_to 'Edit', edit_client_profile_path(client_profile) %></td>
        <td><%= link_to 'Destroy', client_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client Profile', new_client_profile_path %>
